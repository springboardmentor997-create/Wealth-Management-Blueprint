# Railway Environment File (.env.railway)
# This file contains production environment variables for Railway deployment

# Database - Will be automatically set by Railway PostgreSQL plugin
# DATABASE_URL=postgresql://user:password@host:port/wealth_db

# API Configuration
API_ENV=production
DEBUG=False

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-railway-dashboard
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
FRONTEND_URL=https://your-domain.railway.app
ALLOWED_ORIGINS=https://your-domain.railway.app,https://www.your-domain.railway.app

# API Keys (set these in Railway dashboard)
# ALPHA_VANTAGE_KEY=your_key
# FINNHUB_KEY=your_key
# NEWSAPI_KEY=your_key

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS S3 Configuration (optional for file uploads)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_key
# AWS_S3_BUCKET=your_bucket
# AWS_REGION=us-east-1
