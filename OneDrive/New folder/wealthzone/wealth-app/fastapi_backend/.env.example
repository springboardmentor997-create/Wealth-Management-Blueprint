# Database Configuration
DATABASE_URL=sqlite:///./wealth_management.db

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# External API Keys (encrypted in production)
# Alpha Vantage API Key (for stock data)
ALPHAVANTAGE_API_KEY=your_alpha_vantage_api_key_here

# News API Key (for financial news)
NEWS_API_KEY=your_news_api_key_here

# Email Service API Key (for notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/reports

# Security Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
ENABLE_API_KEY_ENCRYPTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds